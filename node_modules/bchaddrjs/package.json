  "author": "Emilio Almansi <hi@ealmansi.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ealmansi/bchaddrjs/issues"
  },
  "homepage": "https://github.com/ealmansi/bchaddrjs#readme",
  "devDependencies": {
    "@babel/cli": "7.12.10",
    "@babel/core": "7.12.10",
    "@babel/preset-env": "7.12.11",
    "babel-loader": "8.2.2",
    "chai": "4.2.0",
    "coveralls": "3.0.9",
    "jsdoc": "3.6.3",
    "mocha": "8.2.1",
    "mustache": "2.3.2",
    "nyc": "15.0.0",
    "shelljs": "0.8.3",
    "shx": "^0.3.3",
    "standard": "14.3.2",
    "webpack": "5.11.0",
    "webpack-cli": "4.3.0"
  },
  "dependencies": {
    "bs58check": "2.1.2",
    "buffer": "^6.0.3",
    "cashaddrjs": "0.4.4",
    "stream-browserify": "^3.0.0"
  }
